# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/salesradar
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=salesradar
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# Server
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRES_IN=30d

# Frontend
VITE_API_URL=http://localhost:5000/api
VITE_ANALYTICS_URL=http://localhost:8000
VITE_APP_NAME=SalesRadar
VITE_ENABLE_ANALYTICS=true
VITE_WS_URL=ws://localhost:5000

# Google Gemini AI
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-pro

# ML Models
MODEL_UPDATE_INTERVAL=86400
FORECAST_HORIZON_DAYS=28
ML_SERVICE_URL=http://localhost:8000

# AWS (Optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=salesradar-assets

# Email (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@salesradar.com

# Monitoring (Optional)
SENTRY_DSN=
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
